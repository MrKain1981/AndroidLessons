<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".WorkoutDetailActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workout_detail_title"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Название упражнения"
            android:textSize="24sp"
            android:textAlignment="center"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/workout_detail_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                />

            <ImageView
                android:id="@+id/workout_detail_popup_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/workout_detail_repeats_count"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <SeekBar
            android:layout_marginTop="8dp"
            android:id="@+id/workout_detail_seek_bar"
            android:min="0"
            android:max="200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/workout_detail_difficult"
            android:layout_marginTop="8dp"
            android:text="Сложность"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/records_title"
            />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


           <TextView
                android:id="@+id/workout_detail_last_record_repeats"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                tools:text="10"
                android:textSize="20dp"
                android:textStyle="bold"
            />

           <TextView
                android:id="@+id/workout_detail_last_record_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                tools:text="10.09.2018 10:00:01"
                android:textSize="20dp"
                android:textStyle="bold"
               />

        </LinearLayout>

        <TextView
            android:id="@+id/workout_detail_description"
            android:layout_marginTop="8dp"
            tools:text="Описание упражнения"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
 </ScrollView>